<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRegistroBannerWaydo"
        android:layout_width="369dp"
        android:layout_height="88dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner_waydo" />

    <TextView
        android:id="@+id/tvRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="248dp"
        android:text="Registro:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLoginRegistrarse"
        android:layout_width="149dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="555dp"
        android:text="Registrarse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="237dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="213dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRegistroNick"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:gravity="start|center_vertical"
                android:text="Nick" />

            <TextView
                android:id="@+id/tvRegistroPassword"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:gravity="start|center_vertical"
                android:text="Password" />

            <TextView
                android:id="@+id/tvRegistroEmail"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:gravity="start|center_vertical"
                android:text="Email" />

            <TextView
                android:id="@+id/tvRegistroTelefono"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:gravity="start|center_vertical"
                android:text="Teléfono" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="213dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtRegistroNick"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="tu nick"
                android:inputType="textPersonName"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtRegistroPassword"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="tu password"
                android:inputType="textPassword"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtRegistroEmail"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="tu email"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtRegistroTelefono"
                android:layout_width="155dp"
                android:layout_height="48dp"
                android:ems="10"
                android:hint="tu teléfono"
                android:inputType="phone"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>