<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewItemList"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#000">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <!--
            android:layout_width="160dp"
            android:layout_height="180dp"
            -->
            <ImageView
                android:id="@+id/ivItemListThumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plato2_p001_pizza"
                android:scaleType="centerCrop"
                android:alpha="0.69"
                tools:ignore="MissingConstraints">
            </ImageView>


            <TextView
                android:id="@+id/tvItemListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Pizza Funghi"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ivItemListThumbnail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>